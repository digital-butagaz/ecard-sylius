{% if is_pledg_method(form.vars.value) %}
    <div class="item" {{ sylius_test_html_attribute('payment-item') }}>
        <div class="field">
            <div class="ui radio checkbox" {{ sylius_test_html_attribute('payment-method-checkbox') }}>
                {{ form_widget(form, sylius_test_form_attribute('payment-method-select')) }}
            </div>
        </div>
        <div class="content ui accordion">
            <a class="header title ui pledg_payment_method_choice">
                {{ form_label(form, null, {'label_attr': {'data-test-payment-method-label': ''}}) }}</a>
            <div class="content">{{ render(controller('Pledg\\SyliusPaymentPlugin\\Controller\\Shop\\SimulatePaymentAction', { code: form.vars.value })) }}</div>
            {% if method.description is not null %}
                <div class="description">
                    <p>{{ method.description }}</p>
                </div>
            {% endif %}
        </div>
    </div>
{% else %}
    <div class="item" {{ sylius_test_html_attribute('payment-item') }}>
        <div class="field">
            <div class="ui radio checkbox" {{ sylius_test_html_attribute('payment-method-checkbox') }}>
                {{ form_widget(form, sylius_test_form_attribute('payment-method-select')) }}
            </div>
        </div>
        <div class="content">
            <a class="header">{{ form_label(form, null, {'label_attr': {'data-test-payment-method-label': ''}}) }}</a>
            {% if method.description is not null %}
                <div class="description">
                    <p>{{ method.description }}</p>
                </div>
            {% endif %}
        </div>
    </div>
{% endif %}
