{% import "@SyliusShop/Common/Macro/money.html.twig" as money %}

<table class="ui table">
    <thead>
        <tr>
            <th>{{ 'pledg_sylius_payment_plugin.due_date'|trans }}</th>
            <th>{{ 'pledg_sylius_payment_plugin.amount'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for payment in simulation.payments %}
        <tr>
            <td>{{ payment.date|format_date }}</td>
            <td>
                {{ money.convertAndFormat(payment.amount + payment.fees) }}
                {% if payment.fees != 0 %}
                    ({{ money.convertAndFormat(payment.fees) }} {{ 'pledg_sylius_payment_plugin.included_in_price'|trans }})
                {% endif %}
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>